{
  "extends": "./tsconfig-common",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "../dist/es5/",
    "lib": [
      "dom",
      "es2015",
      "dom.iterable",
      "es2022.intl"
    ],
    "paths": {
      "@r2-opds-js/*": [
        "node_modules/r2-opds-js/dist/es5/src/*"
      ],
      "@r2-utils-js/*": [
        "node_modules/r2-utils-js/dist/es5/src/*"
      ],
      "@r2-shared-js/*": [
        "node_modules/r2-shared-js/dist/es5/src/*"
      ],
      "@r2-streamer-js/*": [
        "node_modules/r2-streamer-js/dist/es5/src/*"
      ],
      "@r2-lcp-js/*": [
        "node_modules/r2-lcp-js/dist/es5/src/*"
      ]
    }
  }
}
