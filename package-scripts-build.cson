  'prebuild:#ECMASCRIPT#': '
    npm run lint &&
    npm run clean
  '

  'build:#ECMASCRIPT#': '
    npm run transpile:typescript:#ECMASCRIPT#
  '

  'postbuild:#ECMASCRIPT#': '
    npm run afterdist &&
    npm run electron-renderer:#ECMASCRIPT#
  '

  'transpile:typescript:#ECMASCRIPT#': '
    tsc -p "./tsconfigs/tsconfig-#ECMASCRIPT#-all.json"
  '

  'electron-renderer:#ECMASCRIPT#': '
    cpy "./ReadiumCSS/**/*.*" ../dist/ --cwd=./misc --parents &&
    rimraf "./dist/ReadiumCSS/*.css"
  '
